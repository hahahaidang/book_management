<%= javascript_include_tag 'welcome'%>
<table class = 'table table-striped table-bordered' id="table">
  <thead class = 'thead-default'>
  <tr>
    <th>User</th>
    <th>Book</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Date approve</th>
  </tr>
  </thead>
  <tbody>
  <% @collection.each do |t| %>
      <tr>
        <td><%= t.user.user_name %></td>
        <td><%= t.book.book_name %></td>
        <td><%= t.quantity %></td>
        <% if t.status == 1  %>
          <% stt =  'Approved'  %>
        <% end %>
        <td id = 'green'><%= stt %></td>
        <td><%= t.date_approve %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>