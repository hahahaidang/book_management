<% if @role==1 %>
    <h1>SUGGESTION TODAY</h1>
<% else %>
    <h1>APPROVAL TODAY</h1>
<% end %>
<% if !@collection.blank? %>
    <div class="col-xs-offset-2">
      <table class='table table-striped table-bordered' id="table">
        <thead class='thead-default'>
        <tr>
          <th>Suggester</th>
          <th>Book</th>
          <th>Quantity</th>
          <th>Status</th>
          <% if @role==1 %>
              <th>Date suggest</th>
          <% else %>
              <th>Date approve</th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% @collection.each do |t| %>
            <tr>
              <td><%= t.user.user_name %></td>
              <td id="td_book_name" title="<%= t.book.book_name %>"><%= t.book.book_name %></td>
              <td><%= t.quantity %></td>
              <% if t.status == 1 %>
                  <% stt = 'Approved' %>
                  <td id='green'><%= stt %></td>
                  <td class="time"><%= t.date_approve.to_i*1000 %></td>
              <% end %>
              <% if t.status == 0 %>
                  <td>Pending</td>
                  <td class="time"><%= t.created_at.to_i*1000 %></td>
              <% end %>
            </tr>
        <% end %>
<% else %>
    <% if @role==1 %>
      <div id="notification">
        <label id="lb_notification">No suggestion today.</label>
      </div>
    <% else %>
      <div id="notification">
        <label id="lb_notification">No approval today.</label>
      </div>
    <% end  %>
<% end %>
</tbody>
</table>
</div>
<div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
<%= javascript_include_tag 'welcome' %>
