<h1>SEARCH RESULT</h1>
<div class="col-xs-offset-3">
  <table class = 'table table-striped table-bordered' id="table">
    <thead class="thead-default">
      <tr>
        <th>Suggester</th>
        <th>Bookname</th>
        <th>Quantity</th>
        <th>Status</th>
        <th>Date suggested</th>
      </tr>
    </thead>
    <tbody>

        <% @result.each do |t| %>
          <tr>
            <td><%= t['user_name'] %></td>
            <td><%= t['book_name'] %></td>
            <td><%= t['quantity'] %></td>
            <% if t['status'] ==0  %>
                <% stt='Pending' %>
            <% elsif t['status'] == 1  %>
                <% stt='Approved'  %>
                <% color = 'green'  %>
            <% else %>
                <% stt= 'Denied'   %>
                <% color = 'red'  %>
            <% end  %>
            <td id=<%= color %>><%= stt %></td>
            <td><%= t['created_at'] %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>