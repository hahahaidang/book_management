<h1>SEARCH RESULT</h1>
<% if !@result.blank? %>
    <div class="div_search_result">
      <table class='table table-striped table-bordered' id="table">
        <thead class="thead-default">
        <tr>
          <th>Suggester</th>
          <th>Bookname</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Date suggested</th>
        </tr>
        </thead>
        <tbody>

        <% @result.each do |t| %>
            <tr>
              <td><%= t.user.user_name %></td>
              <td><a href="/welcome/detail/<%= t.id %>"><%= t.book.book_name %></a></td>
              <td><%= t.quantity %></td>
              <% if t.status ==0 %>
                  <% stt='Pending' %>
              <% elsif t.status == 1 %>
                  <% stt='Approved' %>
                  <% color = 'green' %>
              <% else %>
                  <% stt= 'Denied' %>
                  <% color = 'red' %>
              <% end %>
              <td id=<%= color %>><%= stt %></td>
              <td class="time"><%= t.created_at.to_i*1000 %></td>
            </tr>
        <% end %>
<% else %>
    <div id="notification">
      <label id="lb_notification">Your search returned no matches.</label>
    </div>
<% end %>
</tbody>
</table>

</div>
<div class="paging-button">
  <%= will_paginate @result, renderer: BootstrapPagination::Rails %>
</div>
<label id="hidden_label"><%= @value_search %></label>
<%= javascript_include_tag 'search_result' %>
