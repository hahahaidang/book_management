<h1>PENDING LIST</h1>
<% if !@collection.blank?  %>
<div class='col-xs-offset-2'>
  <table class='table table-striped table-bordered' id="table">
    <thead class='thead-default'>
    <tr>
      <th>Suggester</th>
      <th>Book</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
    </thead>
    <tbody>
    <% @collection.each do |t| %>
        <tr>
          <td><%= t.user.user_name %></td>
          <td id="td_book_name" title='<%= t.book.book_name %>'>
            <a href="/welcome/detail/<%= t.id %>"><%= t.book.book_name %></a></td>
          <td><%= t.quantity %></td>
          <td>Pending</td>
          <td class="time">
            <%= t.created_at.to_i*1000 %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% else  %>
    <div id="notification">
      <label id="lb_notification">No suggestion today.</label>
    </div>
<% end  %>
<div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

<%= javascript_include_tag 'approve' %>
