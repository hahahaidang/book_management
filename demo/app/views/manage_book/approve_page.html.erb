<%= javascript_include_tag 'approve'%>
<table class = 'table table-striped table-bordered' id="table">
    <thead class = 'thead-default'>
    <tr>
        <th>User</th>
        <th>Book</th>
        <th>Quantity</th>
        <th>Status</th>
        <th>Function</th>
    </tr>
    </thead>
    <tbody>
    <% @collection.each do |t| %>
    <tr>

          <td><%= t.user.user_name %></td>
          <td id="td_book_name">
              <a title='<%= t.book.book_name %>' href='/manage_book/detail_page/<%= t.id %>' type='button'>
                  <%= t.book.book_name %>
              </a>
          </td>
          <td><%= t.quantity %> </td>
          <% unless t.status.nil? %>
          <% if t.status == 0   %>
          <% stt = 'Pending' %>
          <% elsif t.status == 1 %>
          <% stt = 'Approved' %>
          <% else t.status ==2  %>
          <% stt = 'Denied' %>
          <% end %>
          <% end %>
          <td><%= stt %></td>



        <td id="td_function">
            <div class=''>
                <a class='btn btn-success' onclick='approve_request()' href='/manage_book/approve/<%= t.id %>'  type='button'>
                    <span class = 'glyphicon glyphicon-ok'></span>
                </a>
                <a class='btn btn-danger' onclick='deny_request()' href='/manage_book/deny/<%= t.id %>' type='button'>
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </div>
        </td>
    </tr>
    <% end %>
    </tbody>
</table>
<div class="page-button"> <%= will_paginate @collection %> </div>

