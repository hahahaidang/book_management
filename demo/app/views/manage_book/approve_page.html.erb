<%= javascript_include_tag 'approve' %>
<h1>PENDING LIST</h1>
<% if !@collection.blank?  %>
<div class='col-xs-offset-2'>
  <table class='table table-striped table-bordered' id="table">
    <thead class='thead-default'>
    <tr>
      <th>Suggester</th>
      <th>Book</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Function</th>
    </tr>
    </thead>
    <tbody>
    <% @collection.each do |t| %>
        <tr>
          <td><%= t.user.user_name %></td>
          <td id="td_book_name" title='<%= t.book.book_name %>'>
            <a href="/manage_book/detail_page/<%= t.id %>"><%= t.book.book_name %></a></td>
          <td><%= t.quantity %></td>
          <td>Pending</td>
          <td id="td_function">
            <div class=''>
              <a class='btn btn-success' onclick='approve_request()' href='/manage_book/approve/<%= t.id %>' type='button'>
                <span class='glyphicon glyphicon-ok'></span>
              </a>
              <a class='btn btn-danger' onclick='deny_request()' href='/manage_book/deny/<%= t.id %>' type='button'>
                <span class="glyphicon glyphicon-remove"></span>
              </a>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% else  %>
    <div id="notification">
      <label id="lb_notification">No suggestion today.</label>
    </div>
<% end  %>
<div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

