<%= javascript_include_tag 'management_detail'%>

<h1>DETAIL PAGE</h1>
<div class="col-xs-12 col-xs-offset-4">
  <%= form_tag '/manage_book/update', method: :post, class: 'form-horizontal' do %>
      <div class="form-group">
        <label class="col-xs-1">Suggester</label>
        <div>
          <span class="col-xs-4"><%= @suggester %></span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-xs-1">BookID</label>
        <div>
          <span class='col-xs-4'><%= @book_id %> </span>
        </div>
      </div>
      <div class="form-group">
        <label class='col-xs-1'>Name</label>
        <div class='col-xs-4'>
          <%= text_area_tag 'tf_book_name', @book_name, size:'20x4', class: 'form-control'%>

        </div>
      </div>
      <div class="form-group">
        <label class='col-xs-1'>Link</label>
        <div class="col-xs-4">
          <%= text_area_tag 'tf_book_link', @book_link, size:'20x4', class: 'form-control'%>

        </div>
      </div>
      <div class="form-group">
        <label class='col-xs-1'>Price</label>
        <div class="col-xs-4">
          <%= text_field_tag 'tf_book_price',@book_price, class: 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
        <label class='col-xs-1'>Quantity</label>
        <div class="col-xs-4">
          <%= text_field_tag 'tf_book_quantity',@book_quantity, class: 'form-control'  %>
        </div>
      </div>
      <%= text_field_tag 'tf_request_id',@request_id, class: 'form-control hidden'  %>
      <div class='form-group'>
        <div class="col-xs-1"></div>
        <div class='col-xs-4'>
          <span id='result'><%= flash[:notice] %> </span>
        </div>
      </div>
      <div class='form-group'>
        <div class="col-xs-1"></div>
        <div class='col-xs-4'>
          <%= submit_tag 'Update', class:'btn btn-success' %>
        </div>
      </div>

  <% end %>
</div>

