<form method="post" id="form_update_detail">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Detail page</h4>
  </div>
  <div class="modal-body">
    <% @collection.each do |t| %>
        <div class="container_detail">
          <div class="abc form-group">
            <label>Name</label>
            <div>
              <textarea name="tf_book_name" id="tf_book_name" class="form-control" cols="20" rows="4"><%= t.book_name %></textarea>
              <label class='error_label label' id='id_label_tf_bookname'></label>
            </div>
          </div>
          <div class="form-group">
            <label>Quantity</label>
            <div>
              <input name="tf_book_quantity" id="tf_book_quantity" class="form-control" type="number" value="<%= t.book_quantity %>">
              <label class='error_label label' id='id_label_tf_bookquantity'></label>
            </div>
          </div>
          <input name="tf_book_id" id="tf_book_id" class="hidden form-control" value="<%= t.id %>">
          <label id="lb_success" class="green hidden_alert">Update successfully!</label>
          <label id="lb_fail" class="red hidden_alert">Update fail!</label>

        </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-success" onclick="update_detail()">Save changes</button>
  </div>
</form>

