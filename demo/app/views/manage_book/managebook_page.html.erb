<%= javascript_include_tag 'managebook'%>
<h1>BOOK MANAGEMENT</h1>
<div class='col-xs-offset-2'>
  <table class = 'table table-striped table-bordered' id="table">
    <thead class = 'thead-default'>
      <tr>
        <th>#</th>
        <th>Book</th>
        <th>Link</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |t| %>
        <tr>
          <td><%= t.book.id %></td>
          <td title="<%=t.book.book_name%>" id="td_book_name">
            <a href="/manage_book/management_detail_page/<%= t.id %>"><%= t.book.book_name %></a>
          </td>
          <td>
            <a title="<%= t.book_link %>" href="<%= t.book_link %>">Link</a>
          </td>
          <td><%= t.book_price %> $</td>
          <td><%= t.book.book_quantity %></td>
          <td>
            <div class="func-center">
              <a href='/manage_book/delete/<%= t.book.id %>'  onclick='delete_book()' type='button'>
                <span class="glyphicon glyphicon-remove text-danger"></span>
              </a>

            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

