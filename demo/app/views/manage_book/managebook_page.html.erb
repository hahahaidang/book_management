<%= javascript_include_tag 'managebook'%>
  <table class = 'table table-striped table-bordered' id="new">
    <thead class = 'thead-default'>
      <tr>
        <th>#</th>
        <th>Book</th>
        <th>Link</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |t| %>
        <tr>
          <td><%= t.book.id %></td>
          <td title="<%=t.book.book_name%>" id="td_book_name">
            <a href="/manage_book/management_detail_page/<%= t.book.id %>"><%= t.book.book_name %></a>
          </td>
          <td>
            <a title="<%= t.book.book_link %>" href="<%= t.book.book_link %>">Link</a>
          </td>
          <td><%= t.book.book_description %></td>
          <td><%= t.book.book_price %></td>
          <td><%= t.book.book_quantity %></td>
          <td>
            <div class="func-center">
              <a href='/manage_book/delete/<%= t.book.id %>' onclick="raise_alert_confirm()" type='button'>
                <span class="glyphicon glyphicon-remove text-danger"></span>
              </a>

            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div class="page-button"> <%= will_paginate @collection %> </div>

