<%= javascript_include_tag 'login'%>
<div class="div-content col-xs-8">
  <div>
    <span>Login</span>
    <div class="div-login col-xs-12">


      <%= form_tag('sign_in', method: :post) do %>
        <div class="form-group">
          <label for="lbUsr">Username:</label>
          <%= text_field_tag 'tf_username', nil, placeholder: 'Enter username', class: 'form-control col-xs-12' %> <br/>
        </div>
        <div class="form-group">
          <label for="lbPass">Password:</label>
          <%= password_field_tag 'tf_password', nil, placeholder: 'Enter password', class: 'form-control' %>
          <%= submit_tag 'Sign in', class: 'btn btn-primary' %>
        </div>
      <% end %>


    </div>
  </div>
</div>
