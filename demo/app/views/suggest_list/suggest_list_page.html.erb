<%= javascript_include_tag 'suggest_list'%>

<table class = 'table table-striped table-bordered' id="new">
  <thead class = 'thead-default'>
  <tr>
    <th>User</th>
    <th>Book</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Date approve</th>
  </tr>
  </thead>
  <tbody>
  <% @collection.each do |t| %>
      <tr>
        <td><%= t.user.user_name %></td>
        <td id="td_book_name">
          <a title='<%= t.book.book_name %>' href='/suggest_list/detail_suggest_list_page/<%= t.id %>'>
            <%= t.book.book_name %>
          </a>
        </td>
        <td><%= t.quantity %> </td>
        <% unless t.status.nil? %>
            <% if t.status == 0   %>
                <% stt = 'Pending' %>
            <% elsif t.status == 1 %>
                <% stt = 'Approved' %>
            <% else t.status ==2  %>
                <% stt = 'Denied' %>
            <% end %>
        <% end %>
        <td id="<%if stt == 'Approved'%>green<%elsif stt == 'Denied'%>red<%else%><% end %>"><%= stt %></td>
        <td><%= t.date_approve %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="page-button"> <%= will_paginate @collection %> </div>

