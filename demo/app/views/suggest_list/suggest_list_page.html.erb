<h1>SUGGESTED LIST</h1>
<% if !@collection.blank?  %>
<div class="col-lg-offset-2">
  <table class='table table-striped table-bordered' id="table">
    <thead class='thead-default'>
    <tr>
      <th>Suggester</th>
      <th>Book</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Date approve</th>
    </tr>
    </thead>
    <tbody>
    <% @collection.each do |t| %>
        <tr>
          <td><%= t.user.user_name %></td>
          <td id="td_book_name">
            <a title='<%= t.book.book_name %>' href='/suggest_list/detail_suggest_list_page/<%= t.id %>'>
              <%= t.book.book_name %>
            </a>
          </td>
          <td><%= t.quantity %> </td>
          <% unless t.status.nil? %>
              <% if t.status == 0 %>
                  <% stt = 'Pending' %>
              <% elsif t.status == 1 %>
                  <% stt = 'Approved' %>
              <% else
                   t.status ==2 %>
                  <% stt = 'Denied' %>
              <% end %>
          <% end %>
          <td id="<% if stt == 'Approved' %>green<% elsif stt == 'Denied' %>red<% else %><% end %>"><%= stt %></td>
          <% if t.date_approve.to_i*1000 == 0 %>
              <td></td>
          <% else %>
              <td class="time"><%= t.date_approve.to_i*1000 %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% else  %>
    <div id="notification">
      <label id="lb_notification">No suggestion today.</label>
    </div>
<% end  %>
<div class="page-button">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
<%= javascript_include_tag 'suggest_list' %>

