<%= render 'layouts/header' %>

<body>
<div class="navbar-default main-nav">
  <div class="row">
    <div class="navbar-header col-xs-7">
      <a id="text-navbar-logo" class="navbar-brand" href="/welcome/index">Book Management</a>
      <!--anonymous-->
      <% if session[:user].nil? %>
          <ul class="nav navbar-nav">
            <a id="text-navbar-suggestlist" href="/suggest_list/suggest_list_page" class="navbar-brand lb_suggest_list" role="button">Suggestion
              List</a>
          </ul>
      <% else
           if @role == 0 %>
              <ul class="nav navbar-nav">
                <a id="text-navbar-suggest" href="/suggest/suggest_page" class="navbar-brand lb_suggest" role="button">Suggest
                  book</a>
                <a id="text-navbar-suggestlist" href="/suggest_list/suggest_list_page" class="navbar-brand lb_suggest_list" role="button">Suggested
                  List</a>
              </ul>
          <% else
               if @role== 1 %>
                  <ul class="nav navbar-nav">
                    <a id="text-navbar-suggest" href="/suggest/suggest_page" class="navbar-brand lb_suggest" role="button">Suggest
                      book</a>
                    <a id="text-navbar-suggestlist" href="/suggest_list/suggest_list_page" class="navbar-brand lb_suggest_list" role="button">Suggested
                      List</a>
                    <li class="dropdown">
                      <a id="text-navbar" href="#" class="navbar-brand dropdown-toggle btn_dropdown"
                         data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin
                        <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li class="dropdown-header">Admin feature</li>
                        <li role="separator" class="divider"></li>
                        <li><a href="/manage_book/approve_page">Approval</a></li>
                        <li><a href="/manage_book/managebook_page">Management page</a></li>
                      </ul>
                    </li>
                  </ul>
              <% end %>
          <% end %>
      <% end %>

    </div>
    <div class="navbar-right">
      <%= form_tag '/welcome/search_result', method: :get, class: 'navbar-form' do %>
          <ul class="nav navbar-nav ">
            <li>
              <div class='form-group'>
                <%= search_field_tag 'tf_search', nil, class: 'form-control', placeholder: "Enter book's name", autocomplete: 'off' %>
                <%= submit_tag 'Search', class: 'btn btn-default' %>
              </div>
            </li>
            <% if session[:user].nil? %>
                <li id="btn_login_logout"><a id="text-navbar" href="/login/login_page" class="navbar-brand">Login</a>
                </li>
            <% else %>
                <li id="lb_username" class="navbar-brand">[<%= session[:user] %>]</li>
                <li id="btn_login_logout"><a id="text-navbar" href="/login/logout_page" class="navbar-brand">Logout</a>
                </li>
            <% end %>
          </ul>
      <% end %>
    </div>
  </div>
</div>

<div class='div-body row'>
  <div class="div-content col-xs-12">
    <%= yield %>
  </div>
</div>
<%= render 'layouts/footer' %>

</body>
