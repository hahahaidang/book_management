<h1>PENDING LIST</h1>
<% if !@collection.blank? %>
    <div class="visible-xs">
      <div class='search_form form-group'>
        <%= form_tag '/manage_book/approve_page', method: 'get' do %>
            <span>Search by</span>
            <%= select_tag(:search_type, options_for_select([['Suggester', 0], ['Bookname', 1]])) %>
            <%= text_field_tag 'tf_search_admin', nil %>
            <button type="submit" class="glyphicon glyphicon-search search_button"></button>
        <% end %>
      </div>
      <% @collection.each do |t|  %>
          <div class="div_item col-xs-6">
            <div class='image_list'>
              <% if t.image_link.blank? %>
                  <a href="/welcome/detail/<%= t.id %>">
                    <img id='div_item_image' src="/assets/images/no_image.png">
                  </a>
              <% else %>
                  <a href="/welcome/detail/<%= t.id %>">
                    <img id='div_item_image' src="<%= t.image_link %>">
                  </a>
              <% end %>
            </div>
            <div class="item_content">
              <div class="item_bookname">
              <% if t.status == 0 %>
                  <label class="lb_bookname" title="<%= t.book.book_name %>">
                    <%= t.book.book_name %>
                  </label>
              <% end %>
              <% if t.status == 1 %>
                  <label class="lb_bookname" id="green" title="<%= t.book.book_name %>">
                    <%= t.book.book_name %>
                  </label>
              <% end %>
              <% if t.status == 2 %>
                  <label class="lb_bookname" id="red" title="<%= t.book.book_name %>">
                    <%= t.book.book_name %>
                  </label>
              <% end %>
              </div>
              <div class="">
                <span>
                  Suggester: <%= t.user.user_name %>
                </span> <br>
                <span>Date:</span>
                <span class="time">
                  <%= t.created_at.to_i*1000 %>
                </span>
              </div>
            </div>
          </div><!--end div_item-->
      <% end  %>
    </div>



    <div class='div_approve_page hidden-xs'>
      <div class='search_form form-group'>
        <%= form_tag '/manage_book/approve_page', method: 'get' do %>
            <span>Search by</span>
            <%= select_tag(:search_type, options_for_select([['Suggester', 0], ['Bookname', 1]])) %>
            <%= text_field_tag 'tf_search_admin', nil %>
            <button type="submit" class="glyphicon glyphicon-search search_button"></button>
        <% end %>
      </div>
      <table class='table table-striped table-bordered' id="table">
        <thead class='thead-default'>
        <tr>
          <th>Suggester</th>
          <th>Book</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Date</th>
        </tr>
        </thead>
        <tbody>
        <% @collection.each do |t| %>
            <tr>
              <td><%= t.user.user_name %></td>
              <td id="td_book_name" title='<%= t.book.book_name %>'>
                <a href="/welcome/detail/<%= t.id %>"><%= t.book.book_name %></a></td>
              <td><%= t.quantity %></td>
              <td>Pending</td>
              <td class="time">
                <%= t.created_at.to_i*1000 %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="page-button">
      <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
    </div>
<% else %>
    <div id="notification">
      <label id="lb_notification">Found no suggestion.</label>
    </div>
    <%= @abc %>

<% end %>

<%= @search_type %>
<%= @input %>
<%= javascript_include_tag 'approve' %>
