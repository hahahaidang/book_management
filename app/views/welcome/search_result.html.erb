<h1>SEARCH RESULT</h1>
<% if !@result.blank? %>
    <% @result.each do |t|  %>
      <div class="visible-xs">
        <div class="div_item col-xs-6">
          <div class='image_list'>
            <% if t.image_link.blank? %>
                <a href="/welcome/detail/<%= t.id %>">
                  <img id='div_item_image' src="/assets/images/no_image.png">
                </a>
            <% else %>
                <a href="/welcome/detail/<%= t.id %>">
                  <img id='div_item_image' src="<%= t.image_link %>">
                </a>
            <% end %>
          </div>
          <div class="item_content">
            <% if t.status == 0 %>
                <label class="lb_bookname" title="<%= t.book.book_name %>">
                  <%= t.book.book_name %>
                </label>
          <% end  %>
            <% if t.status == 1 %>
                <label class="lb_bookname" id="green" title="<%= t.book.book_name %>">
                  <%= t.book.book_name %>
                </label>
            <% end  %>
            <% if t.status == 2 %>
            <label class="lb_bookname" id="red" title="<%= t.book.book_name %>">
              <%= t.book.book_name %>
            </label>
            <% end  %>
            <div class="div_span">
              <span>Suggester: <%= t.user.user_name %></span> <br/>
              <span>Date:</span>
              <span class="time">
                <%= t.created_at.to_i*1000 %>
              </span>
            </div>
          </div>
        </div><!--end div_item-->
      </div>
    <% end %>


    <div class="div_search_result hidden-xs">
      <table class='table table-striped table-bordered' id="table">
        <thead class="thead-default">
        <tr>
          <th>Suggester</th>
          <th>Bookname</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Date suggested</th>
        </tr>
        </thead>
        <tbody>

        <% @result.each do |t| %>
            <tr>
              <td><%= t.user.user_name %></td>
              <td id='td_book_name'><a href="/welcome/detail/<%= t.id %>"><%= t.book.book_name %></a></td>
              <td><%= t.quantity %></td>
              <% if t.status ==0 %>
                  <% stt='Pending' %>
              <% elsif t.status == 1 %>
                  <% stt='Approved' %>
                  <% color = 'green' %>
              <% else %>
                  <% stt= 'Denied' %>
                  <% color = 'red' %>
              <% end %>
              <td id=<%= color %>><%= stt %></td>
              <td class="time"><%= t.created_at.to_i*1000 %></td>
            </tr>
        <% end %>
<% else %>
    <div id="notification">
      <label id="lb_notification">Your search returned no matches.</label>
    </div>
<% end %>
</tbody>
</table>

</div>
<div class="paging-button">
  <%= will_paginate @result, renderer: BootstrapPagination::Rails %>
</div>
<label id="hidden_label"><%= @value_search %></label>
<%= javascript_include_tag 'search_result' %>
